            <if test="updateBy != null and updateBy != ''">and update_by = #{updateBy}</if>
        </where>
    </select>

    <!--保存寄送信息-->
    <insert id="save" parameterType="com.bootdo.send.domain.SendInfoDO">
		insert into js_send_info
		(
			`send_id`, 
			`policy_no`, 
			`send_orderno`, 
			`file_type`, 
			`insurance_company`, 
			`courier_company`, 
			`sender_type`, 
			`sender_name`, 
			`sender_mobile`, 
			`sender_address`, 
			`send_time`, 
			`recipient_name`, 
			`recipient_mobile`, 
			`recipient_address`, 
			`receipt_time`, 
			`send_content`, 
			`send_desc`, 
			`send_attach`, 
			`send_state`, 
			`calm_period_start`, 
			`calm_period_end`, 
			`create_time`, 
