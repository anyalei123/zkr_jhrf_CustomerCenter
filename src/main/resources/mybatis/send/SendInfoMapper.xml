			#{sendOrderno}, 
			#{fileType}, 
			#{insuranceCompany}, 
			#{courierCompany}, 
			#{senderType}, 
			#{senderName}, 
			#{senderMobile}, 
			#{senderAddress}, 
			#{sendTime}, 
			#{recipientName}, 
